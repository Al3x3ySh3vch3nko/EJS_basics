<h1 class="h3 mb-3 font-weight-normal">Compose</h1>

<form class="form-signin" action="/compose" method="post">

<div class="form-group">
    <label>Title</label>
</div>

<div class="form-group">
    <input type="text" name="postTitle" class="form-control top">
</div>

<div class="form-group">
    <label>Post</label>
</div>

<div class="form-group">
    <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
</div>

<div class="form-group">
    <button class="btn btn-primary" type="submit" name="submit"> Publish </button>
</div>

</form>

